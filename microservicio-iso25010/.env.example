# Generar con: openssl rand -base64 64
JWT_SECRET=bXljb21wbGV4c2VjcmV0a2V5Zm9yand0dG9rZW5zaWdudGluZ21pY3Jvc2VydmljaW9pc28yNTAxMHByb3llY3R1bmd2bWFyaWFub2dhbHZleg==

# Tiempo de expiración del token JWT en milisegundos
# 86400000 ms = 24 horas
# 3600000 ms = 1 hora
JWT_EXPIRATION=86400000

# Tiempo de expiración del refresh token en milisegundos
# 604800000 ms = 7 días
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ----------------------------------------
# ACTUATOR (MONITOREO)
# ----------------------------------------
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=when-authorized

# ----------------------------------------
# DEVTOOLS (DESARROLLO)
# ----------------------------------------
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true


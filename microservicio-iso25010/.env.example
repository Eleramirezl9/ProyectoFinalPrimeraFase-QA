# ----------------------------------------
# CONFIGURACIÓN DEL SERVIDOR
# ----------------------------------------
SERVER_PORT=8080
CONTEXT_PATH=/api

# ----------------------------------------
# CONFIGURACIÓN DE LOGGING
# ----------------------------------------
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_HIBERNATE=TRACE
LOG_LEVEL_ROOT=INFO

# ----------------------------------------
# SWAGGER/OpenAPI
# ----------------------------------------
SWAGGER_ENABLED=true
SWAGGER_UI_ENABLED=true
SWAGGER_API_DOCS_PATH=/api-docs
SWAGGER_UI_PATH=/swagger-ui.html

# ----------------------------------------
# JWT (AUTENTICACIÓN)
# ----------------------------------------
